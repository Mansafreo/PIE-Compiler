
  socket sock;
  sock = tcp_socket();

  int result;
  result = tcp_connect(sock, "127.0.0.1", 12345);
  output(result,int);


  if (result == 0) {
    tcp_send(sock, "hello from pie net!\n");

    // Reading response would require a buffer, which is not fully supported yet.
    // I will skip the recv test for now.

    tcp_close(sock);
  }else{
    string error="Error sending request";
    output(error,string);
  }

